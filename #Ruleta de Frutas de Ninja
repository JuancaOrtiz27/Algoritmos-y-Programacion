        " # Ruleta de Frutas Ninja (bÃ¡sico)\n",
        "import random\n",
        "import datetime\n",
        "\n",
        "# --- Estructuras ---\n",
        "frutas = [\"manzana\", \"arandano\",  \"naranja\", \"uva\", \"kiwi\", \"fresa\"]\n",
        "intentos_usados = set()\n",
        "intentos = 0\n",
        "MAX_INTENTOS = 5\n",
        "\n",
        "# --- SelecciÃ³n de la fruta secreta ---\n",
        "secreta = random.choice(frutas)\n",
        "\n",
        "print(\"Â¡Bienvenido a la Ruleta de Frutas Ninja!\")\n",
        "print(f\"Tienes {MAX_INTENTOS} intentos para adivinar la fruta secreta.\")\n",
        "print(  \"Las frutas disponibles son: \" + \", \".join(frutas)\n",
        "\n",
        "# --- Bucle principal del juego ---\n",
        "while intentos < MAX_INTENTOS:\n",
        "    print(\"-\" * 20)\n",
        "\n",
        "    # Manejar entrada vacÃ­a y normalizar\n",
        "    intento_raw = input(f\"Intento #{intentos + 1}: Ingresa una fruta: \").strip().lower()\n",
        "\n",
        "    if not intento_raw:\n",
        "        print(\"âŒ Por favor, ingresa una fruta vÃ¡lida. El intento no cuenta.\")\n",
        "        continue\n",
        "\n",
        "    # Validar que no se repitan los intentos\n",
        "    if intento_raw in intentos_usados:\n",
        "        print(f\"âŒ Ya intentaste con '{intento_raw}'. Â¡Prueba con otra fruta!\")\n",
        "        continue\n",
        "\n",
        "    # Agregar el intento al set de intentos usados\n",
        "    intentos_usados.add(intento_raw)\n",
        "    intentos += 1\n",
        "\n",
        "    # Comprobar si el intento es correcto\n",
        "    if intento_raw == secreta:\n",
        "        print(f\"\\nðŸŽ‰ Â¡Felicidades! Adivinaste la fruta secreta ('{secreta}') en {intentos} intentos.\")\n",
        "        victoria = True\n",
        "        break\n",
        "    else:\n",
        "        print(\"ðŸ˜• Incorrecto. Â¡Sigue intentando!\")\n",
        "        victoria = False\n",
        "\n",
        "# --- Mensaje final y registro del resultado ---\n",
        "print(\"-\" * 20)\n",
        "if not victoria:\n",
        "    print(f\"\\nGame Over. ðŸ˜¥ Te quedaste sin intentos. La fruta secreta era '{secreta}'.\")\n",
        "\n",
        "# --- ExtensiÃ³n: Guardar el resultado en scores.txt ---\n",
        "with open(\"scores.txt\", \"a\") as file:\n",
        "    timestamp = datetime.datetime.now().strftime(\"%Y-%m-%d %H:%M:%S\")\n",
        "    resultado = \"Victoria\" if victoria else \"Derrota\"\n",
        "    log_entry = f\"{timestamp} - Resultado: {resultado}, Intentos: {intentos}, Fruta: {secreta}\\n\"\n",
        "    file.write(log_entry)\n",
        "\n",
        "print(\"\\nSe ha guardado el resultado en 'scores.txt'. Â¡Gracias por jugar!\")"
      ],
